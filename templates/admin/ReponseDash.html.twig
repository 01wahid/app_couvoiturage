{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Réponses{% endblock %}

{% block body %}
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Gestion des Réponses</h1>
            <a href="{{ path('reponse_create') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Nouvelle Réponse
            </a>
        </div>

        <!-- Content Row -->
        <div class="row">
            <!-- Card Example -->
            <div class="col-xl-12 col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Liste des Réponses</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Réclamation</th>
                                    <th>Message</th>
                                    <th>Responsable</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Réclamation</th>
                                    <th>Message</th>
                                    <th>Responsable</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                                <tbody>
                                {% for reponse in reponses %}
                                    <tr>
                                        <td>{{ reponse.id }}</td>
                                        <td>{{ reponse.reclamation.objet }}</td>
                                        <td>{{ reponse.message|length > 50 ? reponse.message[:50] ~ '...' : reponse.message }}</td>
                                        <td>{{ reponse.responsable.name }}</td>
                                        <td>{{ reponse.date|date('d/m/Y') }}</td>
                                        <td>
                                            <a href="{{ path('reponse_view', {id: reponse.id}) }}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('reponse_edit', {id: reponse.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{{ path('reponse_delete', {id: reponse.id}) }}" class="btn btn-danger btn-sm"
                                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucune réponse trouvée</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
