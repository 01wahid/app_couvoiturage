{% extends 'base.html.twig' %}

{% block title %}{{ app.user.getNom() }}{% endblock %}

{% block body %}
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <!-- Image Avatar -->
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                <h5>{{ app.user.getNom() }} {{ app.user.getPrenom() }}</h5>
                                <p>{{ app.user.getRoles() | join(', ') }}</p>
                                <a href="{{ path('edit_profile') }}" class="btn btn-primary btn-sm">
                                    <i class="far fa-edit"></i> Modifier
                                </a>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Informations</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">{{ app.user.getEmail() }}</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Téléphone</h6>
                                            <p class="text-muted">{{ app.user.getTelephone() }}</p>
                                        </div>
                                    </div>
                                    <h6>Projets récents</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Projet récent</h6>
                                            <p class="text-muted">Lorem ipsum dolor sit amet</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Projet populaire</h6>
                                            <p class="text-muted">Dolor sit amet consectetur</p>
                                        </div>
                                    </div>
                                    <h6>Réseaux sociaux</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="d-flex justify-content-start">
                                        <a href="#!" class="me-3">
                                            <i class="fab fa-facebook-f fa-lg"></i>
                                        </a>
                                        <a href="#!" class="me-3">
                                            <i class="fab fa-twitter fa-lg"></i>
                                        </a>
                                        <a href="#!" class="me-3">
                                            <i class="fab fa-instagram fa-lg"></i>
                                        </a>
                                    </div>
                                    <div class="d-flex justify-content-start mt-3">
                                        <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">
                                            Se déconnecter
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
