{% extends 'base.html.twig' %}

{% block title %}Modifier le Trajet{% endblock %}

{% block body %}
    <div class="container mt-5 h-100">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h1 class="h4">Modifier le Trajet</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                <!-- Lieu de départ -->
                <div class="form-group mb-4">
                    {{ form_label(form.depart, 'Lieu de départ', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                    {{ form_widget(form.depart, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le lieu de départ' } }) }}
                    {{ form_errors(form.depart) }}
                </div>

                <!-- Destination -->
                <div class="form-group mb-4">
                    {{ form_label(form.destination, 'Destination', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                    {{ form_widget(form.destination, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez la destination' } }) }}
                    {{ form_errors(form.destination) }}
                </div>

                <!-- Date et Heure -->
                <div class="form-group mb-4">
                    {{ form_label(form.dateHeure, 'Date et Heure', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                    {{ form_widget(form.dateHeure, { 'attr': { 'class': 'form-control' } }) }}
                    {{ form_errors(form.dateHeure) }}
                </div>

                <!-- Nombre de places -->
                <div class="form-group mb-4">
                    {{ form_label(form.nombrePlaces, 'Nombre de places', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                    {{ form_widget(form.nombrePlaces, { 'attr': { 'class': 'form-control' } }) }}
                    {{ form_errors(form.nombrePlaces) }}
                </div>

                <!-- Contribution aux frais -->
                <div class="form-group mb-4">
                    {{ form_label(form.contributionFrais, 'Contribution aux frais', { 'label_attr': { 'class': 'form-label fw-bold' } }) }}
                    {{ form_widget(form.contributionFrais, { 'attr': { 'class': 'form-control' } }) }}
                    {{ form_errors(form.contributionFrais) }}
                </div>

                <!-- Boutons d'action -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Enregistrer les Modifications
                    </button>
                    <a href="{{ path('list_trajets_user') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
